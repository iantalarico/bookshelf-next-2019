extends ../base.pug

block content
  h3 #{action} book
  form(method="POST", enctype="multipart/form-data")
    .form-group
      label(for="title") Title
      input.form-control(type="text", name="title", id="title", value=book.title)
    .form-group
      label(for="author") Author
      input.form-control(type="text", name="author", id="author", value=book.author)
    .form-group
      label(for="publishedDate") Date Published
      input.form-control(type="text", name="publishedDate", id="publishedDate", value=book.publishedDate)
    .form-group
      label(for="description") Description
      input.form-control(type="text", name="description", id="description", value=book.description)
    .form-group
      label(for="image") Cover Image
      input.form-control(type="file", name="image", id="image")
    .form-group
        label(for="description") AutoAwesome (Use the book image to get book details)
        input.form-control(type="checkbox", name="autoawesome", id="autoawesome", value=book.autoawesome)
    .form-group.hidden
      label(for="imageUrl") Cover Image URL
      input.form-control(type="text", name="imageUrl", id="imageUrl", value=book.imageUrl)
    .form-group.hidden
      label(for="createdBy") Created by
      input.form-control(type="text", name="createdBy", id="createdBy", value=book.createdBy)
    .form-group.hidden
      label(for="createdById") Created by ID
      input.form-control(type="text", name="createdById", id="createdById", value=book.createdById)
    button.btn.btn-success(type="submit") Save
    script.
      var awesome = document.getElementById('autoawesome');
      var disfunc = () => {
        document.getElementById('title').disabled=awesome.checked;
        document.getElementById('author').disabled=awesome.checked;
        document.getElementById('publishedDate').disabled=awesome.checked;
        document.getElementById('description').disabled=awesome.checked;
        document.getElementById('title').value='';
        document.getElementById('author').value='';
        document.getElementById('publishedDate').value='';
        document.getElementById('description').value='';
      }
      awesome.onclick = disfunc;